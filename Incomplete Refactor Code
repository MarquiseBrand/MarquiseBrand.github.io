namespace Adopt_A_Robot
{
    class Game
    {
        Player player;
        string GameTitle = "Adopt a bot!";
        


        public Game()
        {
            player = new Player();
            }
        public Game(string title)
        {
            GameTitle = title;
            player = new Player();
        }

        string player = new Player();
        
        setColor()
        {
            case "1":
                player.PlayerRobot.Color = "blue";
                break;
            }


        namespace Adopt_a_Robot
    {
        class Robot
        {
            public string Name;
            public string Color;

            public Robot(string name, string color)
            {
                Name = name;
                Color = color;
            }
        }
    }

    namespace Adopt_a_Robot
    {
        class Program
        {
            static void Main(string[] args)
            {
                Game game = new Game("Super Awesome Adopt-a-Bot Game!");
                game.Start();
            }
        }
    }

    namespace Adopt_a_Robot
    {
        class Player
        {
            public string Name;
            public Robot PlayerRobot;

            public Player()
            {
                PlayerRobot = new Robot("Robot Mach II", "Silver");
            }
        }
    }

    

    public void Start()
        {
            Title = GameTitle;

            //Get player's name and save it to the instance of player class
            WriteLine("Welcome to Adopt a Robot!");
            WriteLine("What is your name?");
            player.Name = Console.ReadLine();

            //greet player with name they entered
            WriteLine("Glad to meet you" + player.Name);
            
            WriteLine($"You are adopting a robot.");

            //get name for player's robot
            WriteLine("What name would you like your robot to have?");
            player.PlayerRobot.Name = ReadLine();

            //get color for robot
            WriteLine("Type a number for a color: 1) Blue 2) Purple 3)Green 4) Brown 5) Black 6) Coral ");
            string choice = ReadLine();
            switch (choice)
            {
                case "1":
                    player.PlayerRobot.Color = "blue";
                    break;
                case "2":
                    player.PlayerRobot.Color = "purple";
                    break;
                case "3":
                    player.PlayerRobot.Color = "green";
                    break;
                case "4":
                    player.PlayerRobot.Color = "brown";
                    break;
                case "5":
                    player.PlayerRobot.Color = "black";
                    break;
                case "6":
                    player.PlayerRobot.Color = "coral";
                    break;
                default:
                    player.PlayerRobot.Color = "silver";
                    break;
            }
                        

            //print summary of player's robot (name and color)
            Clear();
            WriteLine($"Congratulations {player.Marquise}! You have adopted a {player.PlayerRobot.Color} robot named {player.PlayerRobot.Name}. Press any key to exit.");
            ReadKey();


           }

                     
        }
    }
